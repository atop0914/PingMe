# PingMe Production Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8080

# Database (MySQL)
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your-secure-database-password
DB_NAME=pingme

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# Kafka
KAFKA_BROKERS=kafka:9092

# JWT (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# MySQL (for docker-compose)
MYSQL_ROOT_PASSWORD=your-secure-database-password
